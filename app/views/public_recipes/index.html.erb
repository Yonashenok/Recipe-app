<div class="container d-flex flex-column  justify-content-center align-items-start pt-5">
<h1 class="recipe-head">Public Recipes</h1>
<section class="public-recipe-container">
<% if @public_recipes.empty? %>
    <p>No public recipes in the collection</p>
<% end %>
<% @public_recipes.each do |recipe| %>
<div id="<%= dom_id recipe %>">
<div class="card mb-3 mt-3 ms-5" style="width: 640px; margin-left: 100px;">
  <div class="row g-0">
    <div class="col-md-4 p-3 d-flex flex-column justify-content-between">
     <h2 class="card-title ps-2">By: <%= recipe.user.name %></h2>
    <div class='p-3'>
    <%= link_to "View",  recipe_path(recipe.id), class: "btn btn-outline-info  fw-semibold fs-5 px-3" %> 
    </div>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title"><%= recipe.name  %></h3>
        <p class="card-text">Total food items: <%= recipe.recipe_foods.count %></p>
        <p class="card-text">Total price: $<%= recipe.total_price %></p>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
</section>
</div>