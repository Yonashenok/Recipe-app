<div class="container d-flex flex-column  justify-content-center align-items-start pt-5 size">

<h1>You can Add ingredients here</h1>
<%= form_with model: @recipe_food, url: recipe_foods_path, method: :post, class:"input-form size", data: { turbo: false }  do |f|%>
    <div class="form-div" >
    <%= f.hidden_field :recipe_id, value: @recipe.id %>


    <div class="mb-3 col-sm-8">
    <%= f.label :food, class:"form-label" %><br>
    <%= f.select :food_id, current_user.foods.collect {|food| [food.name, food.id]},{ include_blank: true} , class:"form-select w-100" %><br>

    </div>

    <div class="mb-3 col-sm-8">
    <%= f.label :quantity, class:"form-label" %><br>
    <%= f.number_field :quantity ,  class:"form-control" , required: true, placeholder: '1',  min: 1%><br>
    </div>

    <div class="mb-3 col-sm-2  text-center d-flex justify-content-start ">
    <%= f.submit "Submit", class:"btn btn-primary form-control" %>
    </div>
    <div>
    <%= link_to "Back to #{@recipe_food.recipe.name}", recipe_path(@recipe_food.recipe.id), class: "btn btn-primary mt-5" %>
    </div>
    </div>

<%end%>
</div>